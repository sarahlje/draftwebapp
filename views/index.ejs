  <script>
    // Ensure form starts completely fresh
    document.addEventListener('DOMContentLoaded', function() {
      // Clear all form inputs on page load
      const form = document.getElementById('workout-form');
      if (form) {
        // Reset the entire form
        form.reset();
        
        // Specifically uncheck all checkboxes
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
          checkbox.checked = false;
        });
        
        // Reset selects to default disabled options
        document.getElementById('fitnessGoal').selectedIndex = 0;
        document.getElementById('workout-style').selectedIndex = 0;
        
        // Reset slider to default
        const durationSlider = document.getElementById('workout-duration');
        if (durationSlider) {
          durationSlider.value = 30;
          document.getElementById('duration-value').textContent = '30 minutes';
        }
      }
      
      // Mobile navigation toggle
      const mobileToggle = document.getElementById('mobile-nav-toggle');
      const navLinks = document.getElementById('nav-links');
      
      if (mobileToggle && navLinks) {
        mobileToggle.addEventListener('click', function() {
          navLinks.classList.toggle('active');
        });
        
        // Close mobile nav when clicking on a link
        document.querySelectorAll('.nav-link').forEach(link => {
          link.addEventListener('click', function() {
            navLinks.classList.remove('active');
          });
        });
      }
      
      // Update saved workouts nav indicator
      function updateSavedWorkoutsIndicator() {
        const savedWorkouts = JSON.parse(localStorage.getItem('saved-workouts') || '[]');
        const savedWorkoutsNav = document.getElementById('saved-workouts-nav');
        
        if (savedWorkoutsNav) {
          if (savedWorkouts.length > 0) {
            savedWorkoutsNav.classList.add('has-saved-workouts');
          } else {
            savedWorkoutsNav.classList.remove('has-saved-workouts');
          }
        }
      }
      
      // Check saved workouts on page load
      updateSavedWorkoutsIndicator();
      
      // Handle saved workouts navigation click
      const savedWorkoutsNav = document.getElementById('saved-workouts-nav');
      if (savedWorkoutsNav) {
        savedWorkoutsNav.addEventListener('click', function(e) {
          e.preventDefault();
          
          // Create or toggle saved workouts section
          if (!document.getElementById('view-saved-workouts-btn')) {
            const savedWorkouts = JSON.parse(localStorage.getItem('saved-workouts') || '[]');
            if (savedWorkouts.length > 0) {
              createSavedWorkoutsSection();
              toggleSavedWorkouts();
            } else {
              alert('No saved workouts found. Generate and save a workout first!');
            }
          } else {
            toggleSavedWorkouts();
          }
          
          // Scroll to saved workouts section
          setTimeout(() => {
            const savedSection = document.querySelector('.saved-workouts-container');
            if (savedSection) {
              savedSection.scrollIntoView({ behavior: 'smooth' });
            }
          }, 100);
        });
      }
      
      // Update indicator when workouts are saved/deleted
      const originalSaveWorkout = window.saveWorkout;
      if (typeof originalSaveWorkout === 'function') {
        window.saveWorkout = function(workout) {
          originalSaveWorkout(workout);
          setTimeout(updateSavedWorkoutsIndicator, 100);
        };
      }
    });
  </script>
